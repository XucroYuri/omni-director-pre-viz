{
  "name": "omni-director-pre-viz",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "main": "dist/main/main.js",
  "scripts": {
    "phase9:infra:up": "docker compose up -d",
    "phase9:infra:down": "docker compose down",
    "phase9:web:install": "npm --prefix apps/web install",
    "phase9:web:setup": "node scripts/phase9-web-setup.cjs",
    "phase9:web:db:init": "npm --prefix apps/web run db:init",
    "phase9:web:dev": "npm --prefix apps/web run dev",
    "phase9:web:dev:with-worker": "concurrently \"npm:phase9:web:dev\" \"npm:phase9:web:worker\"",
    "phase9:web:build": "npm --prefix apps/web run build",
    "phase9:web:clean": "npm --prefix apps/web run clean",
    "phase9:web:smoke": "npm --prefix apps/web run smoke:api",
    "phase9:web:worker": "npm --prefix apps/web run worker",
    "phase9:web:worker:once": "npm --prefix apps/web run worker:once",
    "test:e2e:web-dead-letter-retry": "node scripts/e2e-web-dead-letter-retry.cjs",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "concurrently \"tsc -p tsconfig.electron.json -w\" \"wait-on tcp:3000 dist/main/main.js dist/preload/preload.js && cross-env NODE_ENV=development node scripts/run-electron-dev.cjs\"",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:electron && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.5.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.xucroyuri.omni-director-pre-viz",
    "productName": "Omni Director Pre-viz",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**",
      "package.json"
    ],
    "asar": true
  }
}
